{
  // Service Mode Configuration
  // ==========================
  // Configuration for trunk-decoder as API service
  
  "service_mode": "api",
  "api_endpoint": "http://localhost:8080/api/v1/decode",
  
  // Default output formats for API requests
  "enable_json": true,
  "enable_wav": true,
  "enable_text": true,
  
  // Service settings
  "output_dir": "/tmp/trunk-decoder/",
  "quiet": true,
  "process_encrypted": true,
  "include_frame_analysis": true,
  
  // API response format settings
  "audio_format": "wav",
  "audio_sample_rate": 8000,

  // Decryption Keys for Service Mode
  // ================================
  // Keys are typically loaded from secure configuration
  "decryption_keys": [
    // Add your production keys here
    // {
    //   "keyid": "0x100",
    //   "key": "YOUR_HEX_KEY_HERE",
    //   "description": "Production key description"
    // }
  ]
}